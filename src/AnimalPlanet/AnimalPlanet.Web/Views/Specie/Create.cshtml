@model AnimalPlanet.Models.Models.SpecieCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Denomination">Denomination</label>
                <input asp-for="Denomination" class="form-control" />
                <span asp-validation-for="Denomination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenusId">Genus</label>
                <select asp-for="GenusId" class="form-control selectpicker" asp-items="ViewBag.Genuses" data-live-search="true"></select>
                <span asp-validation-for="GenusId" class="text-danger"></span>
                <a asp-action="Create" asp-controller="Family">Add Family</a>
            </div>
            <div class="form-group">
                <label asp-for="NaturalAreas">Natural Areas</label>
                <select asp-for="NaturalAreas" multiple class="form-control selectpicker" asp-items="ViewBag.NaturalAreas" data-live-search="true"></select>
                <span asp-validation-for="NaturalAreas" class="text-danger"></span>
                <a asp-action="Create" asp-controller="NaturalArea">Add Natural Area</a>
            </div>
            <div class="form-group">
                <label asp-for="Reserves">Reserves</label>
                <select asp-for="Reserves" multiple class="form-control selectpicker" asp-items="ViewBag.Reserves" data-live-search="true"></select>
                <span asp-validation-for="NaturalAreas" class="text-danger"></span>
                <a asp-action="Create" asp-controller="Reserve">Add Reserve</a>
            </div>
            <div class="form-group">
                <label asp-for="Description">Denomination</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
